<component name="adhoc.reporting.extensions" version="1.0.0">
<require>org.nuxeo.runtime.started</require>
<extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
  <schema name="report" prefix="report" override="true" src="data/schemas/report.xsd"/>
</extension>
<extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">
  <doctype name="Report" extends="Document">
    <schema name="report"/>
    <schema name="dublincore"/>
    <schema name="common"/>
    <schema name="uid"/>
    <facet name="HiddenInNavigation"/>
  </doctype>
</extension>
<require>org.nuxeo.ecm.directory.sql.storage</require>
<extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory" point="directories">
  <directory name="ReportType">
    <schema>vocabulary</schema>
    <dataSource>java:/nxsqldirectory</dataSource>
    <cacheTimeout>3600</cacheTimeout>
    <cacheMaxSize>1000</cacheMaxSize>
    <idField>id</idField>
    <autoincrementIdField>false</autoincrementIdField>
    <createTablePolicy>on_missing_columns</createTablePolicy>
    <table>adhoc_reporting_ReportType</table>
    <dataFile>data/vocabularies/ReportType.csv</dataFile>
  </directory>
  <directory name="DocumentType">
    <schema>vocabulary</schema>
    <dataSource>java:/nxsqldirectory</dataSource>
    <cacheTimeout>3600</cacheTimeout>
    <cacheMaxSize>1000</cacheMaxSize>
    <idField>id</idField>
    <autoincrementIdField>false</autoincrementIdField>
    <createTablePolicy>on_missing_columns</createTablePolicy>
    <table>adhoc_reporting_DocumentType</table>
    <dataFile>data/vocabularies/DocumentType.csv</dataFile>
  </directory>
  <directory name="ValueType">
    <schema>vocabulary</schema>
    <dataSource>java:/nxsqldirectory</dataSource>
    <cacheTimeout>3600</cacheTimeout>
    <cacheMaxSize>1000</cacheMaxSize>
    <idField>id</idField>
    <autoincrementIdField>false</autoincrementIdField>
    <createTablePolicy>on_missing_columns</createTablePolicy>
    <table>adhoc_reporting_ValueType</table>
    <dataFile>data/vocabularies/ValueType.csv</dataFile>
  </directory>
</extension>
