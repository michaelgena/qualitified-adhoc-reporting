<?xml version="1.0"?>
<component name="org.qualitified.reporting.adhoc.listener.listener.commentPostSaveListener">
    <extension target="org.nuxeo.ecm.core.event.EventServiceComponent" point="listener">
        <listener name="commentPostSaveListener"
                  class="org.qualitified.reporting.adhoc.listener.CommentPostSaveListener">
            <event>documentCreated</event>
            <event>documentModified</event>
            <filters>
                <doctype>Comment</doctype>
                <attribute>Regular Document</attribute>
            </filters>
        </listener>
    </extension>
</component>
